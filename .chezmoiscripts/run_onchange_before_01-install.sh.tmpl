#!/bin/bash

set -eufo pipefail
echo "01-install.sh"

{{- if eq .host.distro.id "darwin" }}

brew cleanup && brew update && brew upgrade
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.darwin.taps -}}
tap {{ . | quote | replace " " "\", \"" }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF

{{ else if (or (eq .host.distro.id "debian") (eq .host.distro.id "debian")) }}

sudo apt autoremove && sudo apt update && sudo apt full-upgrade -y
{{ range .packages.linux.pkgs -}}
sudo apt install -y {{ . }}
{{ end -}}

{{ end -}}
